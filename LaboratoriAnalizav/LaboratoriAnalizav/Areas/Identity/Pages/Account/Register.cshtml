@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row" id="registerform">
    <div class="col-md-4 leftpart">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <h1>Create a new account</h1>
            <img src="https://static7.depositphotos.com/1194063/755/i/950/depositphotos_7553989-stock-photo-scientist-working-at-the-laboratory.jpg">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>


        </form>

    </div>
    <div class="fotoright">
        <img src="https://static7.depositphotos.com/1194063/755/i/600/depositphotos_7553939-stock-photo-scientist-working-at-the-laboratory.jpg" alt="autumn leaves">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

