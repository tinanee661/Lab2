@model IEnumerable<LaboratoriAnalizav.Models.Terminet>
@using ReflectionIT.Mvc.Paging;

@{
    ViewData["Title"] = "Index";
}


<div class="container tableTerminet">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="create-Search">
                <div class=" navbar navbar-light bg-light">
                    <input class="form-control mr-sm-2" id="myInput" type="search" placeholder="Search" aria-label="Search">
                    <a asp-action="Create" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Termin</span></a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Startdate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Enddate)
                    </th>

                    <th>Actions</th>

                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Startdate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Enddate)
                        </td>
                        <td>
                            <a asp-action="Edit" class="edit" asp-route-id="@item.Id"><i class="material-icons" data-toggle="tooltip">&#xE254;</i></a>
                            <a asp-action="Details" class="details" asp-route-id="@item.Id"><i class="material-icons" data-toggle="tooltip">&#xe04a;</i></a>
                            <a asp-action="Delete" class="delete" asp-route-id="@item.Id"><i class="material-icons" data-toggle="tooltip">&#xE872;</i></a>
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <nav aria-label="Terminet Paging">
        @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
    </nav>
</div>


